{
  "name": "jquery-continuous-calendar",
  "version": "4.12.1",
  "description": "Date picker and range selector with scrollable months instead of paged",
  "repository": {
    "type": "git",
    "url": "https://github.com/reaktor/jquery-continuous-calendar"
  },
  "scripts": {
    "test": "mocha-phantomjs src/test/jquery.continuousCalendar.spec.html --reporter dot",
    "portDateutils": "r.js -convert node_modules/dateutils/src src/main/dateutils",
    "portContinuousCalendar": "r.js -convert src/continuousCalendar src/main",
    "buildBundle": "r.js -o src/build/build.js",
    "buildBundle2": "browserify src/continuousCalendar/jquery.continuousCalendar.js --ignore jquery -o build/jquery.continuousCalendar-min.js",
    "buildPlayground": "r.js -o site/playground-build.js",
    "prepublish": "npm run portDateutils && npm run portContinuousCalendar && npm run buildBundle && npm run buildPlayground"
  },
  "keywords": [
    "calendar",
    "date",
    "dateinput",
    "datepicker",
    "dates",
    "form",
    "i18n",
    "input",
    "ui"
  ],
  "author": "Eero Anttila",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/reaktor/jquery-continuous-calendar/issues"
  },
  "main": "./src/continuousCalendar/jquery.continuousCalendar",
  "homepage": "http://reaktor.github.com/jquery-continuous-calendar/",
  "files": [
    "build",
    "src/main",
    "package.json",
    "LICENSE-2.0.txt"
  ],
  "devDependencies": {
    "almond": "~0.3.1",
    "browserify": "^13.0.0",
    "chai": "~3.2.0",
    "chai-jquery": "~2.0.0",
    "mocha": "^2.2.5",
    "mocha-phantomjs": "~3.5.3",
    "phantomjs": "^1.9.17",
    "requirejs": "~2.1.20"
  },
  "dependencies": {
    "dateutils": "^0.2.1",
    "jquery": "^2.2.0"
  }
}
